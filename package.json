{
  "name": "web-dev-pro",
  "version": "1.0.0",
  "description": "Animal Match 3 iPhone game",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coliff/web-dev-pro.git"
  },
  "homepage": "https://web-dev-pro-app.christianoliff.com",
  "bugs": {
    "url": "https://github.com/coliff/web-dev-pro/issues"
  },
  "scripts": {
    "prettier": "npx prettier --write docs/**/*.{html,css,json,js}",
    "prettier:check": "npx prettier --check docs/**/*.{html,css,json,js}",
    "htmlhint": "npx htmlhint docs/**/*.html",
    "pa11y": "npx pa11y https://webdevpro-app.christianoliff.com/",
    "serve": "npx http-server -o \"web-dev-pro/web-dev-pro Extension/Resources/popup.html\" -p 8080 -c-1",
    "serve-docs": "npx http-server -o docs/index.html -p 8080 -c-1",
    "spellcheck": "npx cspell \"docs/**/*.html\" --no-progress",
    "stylelint": "npx stylelint \"web-dev-pro/**/*.css\" --fix",
    "svgo": "npx svgo --folder=\"web-dev-pro/web-dev-pro Extension/Resources/icons\""
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^7.2.0",
    "stylelint-config-standard": "^40.0.0"
  },
  "engines": {
    "node": ">=22"
  }
}
